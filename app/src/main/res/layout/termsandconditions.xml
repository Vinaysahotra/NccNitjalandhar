<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:background="@color/colorAccent"


        android:text="terms and conditions"
     android:textAlignment="center"
        android:textColor="#5419F6"


        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="420dp"
        tools:ignore="RtlCompat" />

    <TextView
        android:paddingRight="10dp"
        android:paddingLeft="5dp"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="These Terms and Conditions constitute a legally binding agreement made between you, whether personally or on behalf of an entity  and Nitj ncc, concerning your access to and use of our mobile application . You agree that by accessing the Application, you have read, understood, and agree to be bound by all of these Terms and Conditions Use. IF YOU DO NOT AGREE WITH ALL OF THESE TERMS AND CONDITIONS, THEN YOU ARE EXPRESSLY PROHIBITED FROM USING THE APPLICATION AND YOU MUST DISCONTINUE USE IMMEDIATELY."
        android:textAllCaps="true"
        android:textColor="#000"


        android:textSize="15sp"
        android:paddingStart="5dp"
        android:paddingEnd="10dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:paddingRight="10dp"
        android:paddingLeft="5dp"
        android:layout_height="147dp"
        android:layout_marginTop="30dp"

        android:text="2. I further promise that after enrolment,     I will have
 to claim on authorities for any compensation in the event of injury or death due
 to accident during training camps, travelling and white YEP or any other such
 NCC events like RDC and IDC. I understand, I have no service liability."
        android:textAllCaps="true"
        android:textColor="#050505"
        android:textSize="15dp"
        tools:ignore="DuplicateIds,HardcodedText,MissingPrefix" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="50dp"

        android:text="I, agree to terms and conditions"
        android:textColor="#0226EF" />

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="50dp"
android:layout_marginLeft="100dp"
        android:layout_marginTop="60dp"
        app:cardBackgroundColor="@color/colorAccent"

            app:cardCornerRadius="15dp"
        >

        <TextView
            android:id="@+id/continue1"
            android:layout_width="match_parent"
            android:textColor="@color/colorPrimary"
            android:background="@color/colorAccent"

            android:textSize="20sp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"

            android:textAllCaps="true"

            android:text="continue"
            android:textAlignment="center"

            android:layout_gravity="center_horizontal"
             />

    </androidx.cardview.widget.CardView>

</LinearLayout>

