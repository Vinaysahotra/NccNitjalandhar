<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".termsandcondition">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:background="@color/colorAccent"



        android:paddingLeft="70dp"


        android:text="terms and conditions"
        android:textAllCaps="true"
        android:textColor="#5419F6"


        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="420dp" />

    <TextView
        android:paddingRight="10dp"
        android:paddingLeft="5dp"
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:layout_marginTop="20dp"
        android:text="@string/_1_i_promise_that_i_will_honestly_and_faithfully_serve_my_country_and_abide_by_the_rules_and_regulations_of_the_national_cadet_corps_that_i_will_do_not_best_of_my_ability_all_parades_and_camps_as_may_be_required_by_the_commanding_officer_from_time_to_time"
        android:textAllCaps="true"
        android:textColor="#000"


        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:paddingRight="10dp"
        android:paddingLeft="5dp"
        android:layout_height="147dp"
        android:layout_marginTop="20dp"

        android:text="2. I further promise that after enrolment,     I will have
 to claim on authorities for any compensation in the event of injury or death due
 to accident during training camps, travelling and white YEP or any other such
 NCC events like RDC and IDC. I understand, I have no service liability."
        android:textAllCaps="true"
        android:textColor="#050505"
        android:textSize="15dp"
        tools:ignore="DuplicateIds,HardcodedText,MissingPrefix" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"

        android:text="@string/i_have_read_terms_and_conditions"
        android:textColor="#0226EF" />

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="50dp"
android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        app:cardBackgroundColor="@color/colorAccent"

            app:cardCornerRadius="15dp"
        >

        <TextView
            android:id="@+id/continue1"
            android:layout_width="match_parent"
            android:textColor="@color/colorPrimary"
            android:background="@color/colorAccent"

            android:textSize="20sp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"

            android:textAllCaps="true"

            android:text="continue"
            android:textAlignment="center"

            android:layout_gravity="center_horizontal"
             />

    </androidx.cardview.widget.CardView>

</LinearLayout>

